:: NPC-List [nobr]

<span id="list">
<<if !$roomNPCs || !$roomNPCs.length>>
	<em>No one is here.</em>
	<<return>>
<</if>>

<<for _i = 0; _i < $roomNPCs.length; _i++>>
	<<set _n = $roomNPCs[_i]>>
	<<PronounsSet>>

	<div class="npc-card">
		<b>[<<print _i + 1>>] </b>
		_n.name<<if _n.surname>> _n.surname<</if>>
		— _n.species
		<<if _n.species is "Anthro">>
			/ _n.anthro.group / _n.anthro.subtype
		<</if>>
		· _n.gender
		<br>

		<i>Age:</i> _n.age<br>
		<i>Origin:</i> _n.origin<br>
		<i>Personality:</i> _n.personality
		· <i>Sex Preference:</i> _n.sexpref
		<br>

		<div class="npc-actions">
		<<capture _n>>
			<<button "Inspect">>
				<<WithNPC _n>>
				<<run Dialog
					.create("NPC: " + $ui.npc.name)
					.wikiPassage("UI-NPC-Inspect")
					.open()
				>>
			<</button>>
			<br>

			<<button "Talk">>
				<<WithNPC _n>>
				<<run Dialog
					.create("Talk to " + $ui.npc.name)
					.wikiPassage("UI-NPC-Talk")
					.open()
				>>
			<</button>>
		<</capture>>
		</div>
	</div>
	<hr>
<</for>>
</span>
